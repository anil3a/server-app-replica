<VirtualHost *:${PORT}>
    ServerName ${DOMAIN}
    DocumentRoot /var/www/html/${FOLDER}

    <Directory /var/www/html/${FOLDER}>
        AllowOverride All
        Require all granted
    </Directory>

    ErrorLog /var/log/apache2/error.log
    CustomLog /var/log/apache2/access.log combined
</VirtualHost>